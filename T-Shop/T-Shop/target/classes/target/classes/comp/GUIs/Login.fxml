<AnchorPane xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="comp.GUIs.LoginController">
	<children>
		<Pane layoutX="0.0" prefHeight="280.0" prefWidth="380.0">
			<children>
				<Button fx:id="logBtn" defaultButton="true" layoutX="26.0" layoutY="212.0" mnemonicParsing="false" prefHeight="42.0" prefWidth="150.0" text="Autentificare" />
				<Label layoutX="15.0" layoutY="67.0" text="Nume Utilizator:" />
				<Label layoutX="15.0" layoutY="117.0" text="Parola:" />
				<TextField fx:id="userTxt" layoutX="111.0" layoutY="63.0" prefHeight="25.0" prefWidth="254.0" />
				<PasswordField fx:id="passTxt" layoutX="111.0" layoutY="113.0" prefHeight="25.0" prefWidth="254.0" />
				<Label fx:id="titleLbl" layoutX="80.0" layoutY="15.0" text="Bine ati venit! Va rugam sa va autentificati!">
					<effect>
						<Glow />
					</effect>
				</Label>
            <Label layoutX="15.0" layoutY="167.0" text="Status:" />
            <ComboBox fx:id="statusCmb" layoutX="113.0" layoutY="163.0" prefHeight="25.0" prefWidth="254.0" />
            <Label layoutX="70.0" layoutY="32.0" text="Daca nu aveti cont va rugam sa va inregistrati!">
            		<effect>
						<Glow />
					</effect>
			</Label>
            <Button fx:id="signBtn" defaultButton="true" layoutX="206.0" layoutY="212.0" mnemonicParsing="false" prefHeight="42.0" prefWidth="150.0" text="Inregistrare" />
			</children>
		</Pane>
	</children>
</AnchorPane>
